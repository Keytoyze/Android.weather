        android:layout_marginLeft="45dp"
        />

    <TextView
        android:text="当前气温"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:textSize="@dimen/result_frontsize"
